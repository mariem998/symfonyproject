{% extends 'template.html.twig' %}

{% block body %}

    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Orders Of Clients</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="">Home</a></p>
                <p class="m-0 px-2">-</p>
                <p class="m-0">Orders Of Clients</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Cart Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-bordered text-center mb-0">
                    <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Id Commande</th>
                        <th>Date</th>
                        <th>Email Client</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody class="align-middle">


                    {% for order in orders %}
                        <tr>

                            <td class="align-middle">{{order.id}}</td>
                            <td class="align-middle">{{order.createdat|date('d/m/Y')}}</td>
                            <td class="align-middle">{{order.user.email}}</td>

                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        {{order.status}}
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li><a class="dropdown-item"
                                               href="{{path('order_status_update',{order: order.id,status: 'Expédié'})}}">Expédier</a></li>
                                        <li><a class="dropdown-item" href="{{path('order_status_update',{order: order.id,status: 'Rejeté'})}}">Rejeter</a></li>
                                    </ul>
                                </div>


                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Pages</a>
                                    <div class="dropdown-menu rounded-0 m-0">
                                        <a href="{{path('order_status_update',{order: order.id,status: 'Expédié'})}}" class="dropdown-item">Expédier</a>
                                        <a href="{{path('order_status_update',{order: order.id,status: 'Rejeté'})}}" class="dropdown-item">Rejeter</a>
                                    </div>
                                </div>



                            </td>
                            <td class="align-middle">
                                <a href="" class="btn btn-sm btn-primary">details</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">
                                <h6 class="font-weight-medium">No Order</h6>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Cart End -->
{% endblock %}
